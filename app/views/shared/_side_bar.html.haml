%wrapper
  .chat-side
    .chat-side-header
      .chat-side-header__box
        %h1.chat-side-header__box__user 
          = current_user.name
          %ul.chat-side-header__box__icon
          %li.chat-side-header__box__icon__new-group
          = link_to new_group_path do
            =icon('fas','edit', class: 'pencil')
          %li.chat-side-header__box__icon__new-group1
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'gea')
    .groups
      -current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %h2.group__name
              = group.name
            %h3.group__message
              = group.show_last_message
            .css-cube
              .css-face.css-forward 
              .css-face.css-reverse 
              .css-face.css-right 
              .css-face.css-left 
              .css-face.css-top 
              .css-face.css-bottom 
              


